{
  "openapi": "3.0.3",
  "info": {
    "title": "User Authentication API",
    "description": "API for user registration and login",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "summary": "Register a new user",
        "requestBody": {
          "description": "User registration data",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email-registrasi": {
                    "type": "string",
                    "description": "User's email"
                  },
                  "username-registrasi": {
                    "type": "string",
                    "description": "User's username"
                  },
                  "password-registrasi": {
                    "type": "string",
                    "description": "User's password"
                  },
                  "password-confirm": {
                    "type": "string",
                    "description": "Confirmation of user's password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Success message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login user",
        "requestBody": {
          "description": "User login data",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user-email": {
                    "type": "string",
                    "description": "User's email or username"
                  },
                  "password-login": {
                    "type": "string",
                    "description": "User's password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Success message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
